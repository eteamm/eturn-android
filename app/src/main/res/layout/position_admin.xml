<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/colorBlock"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/contentLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="13dp">


            <TextView
                android:id="@+id/posId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/exoregular"
                android:gravity="center_vertical"
                android:paddingStart="0dp"
                android:paddingEnd="7dp"
                android:text="@string/justId"
                android:textColor="@color/notImportant"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="125"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/numberTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exoregular"
                    android:text="@string/positionName"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/positionNumberTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exoregular"
                    android:text="@string/positionNumber"
                    android:textAlignment="center"
                    android:textColor="@color/descText"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/delBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/ButtonExitTextMain"
                android:foregroundGravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/cancel"
                android:visibility="visible" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>