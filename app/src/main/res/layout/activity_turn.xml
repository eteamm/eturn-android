<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.eturn.TurnActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ellipse_14" />

                <TextView
                    android:id="@+id/mainTurntxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter"
                    android:gravity="left"
                    android:text="@string/mainTextTurn"
                    android:textColor="@color/mainColorText"
                    android:textSize="14sp" />

            </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingTop="30dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="75dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/exobold"
                            android:text="@string/mainTextTurn"
                            android:textColor="@color/white"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/backTurnImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/goback" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/exoregular"
                        android:paddingBottom="20dp"
                        android:text="@string/mainTextTurnDesc"
                        android:textColor="@color/colorTextSecond"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="7dp"
                            android:layout_weight="1"
                            android:padding="15dp"
                            app:cardBackgroundColor="@color/colorMain"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="15dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/nameTurntxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/exobold"
                                        android:shadowColor="#1B1B1B"
                                        android:shadowDx="0"
                                        android:shadowDy="0"
                                        android:shadowRadius="0"
                                        android:text="@string/nameTurnTurn"
                                        android:textColor="@color/colorText"
                                        android:textSize="20sp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                                    <ImageView
                                        android:id="@+id/editTurnImg"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:paddingLeft="10dp"
                                        android:visibility="gone"
                                        app:srcCompat="@drawable/settings"
                                        tools:visibility="visible" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/nameTeachertxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/exoregular"
                                    android:gravity="bottom"
                                    android:paddingTop="5dp"
                                    android:text="@string/nameTeacherTurn"
                                    android:textColor="@color/colorText"
                                    android:textSize="12sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/mainText" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_weight="3"
                            app:cardBackgroundColor="@color/colorMain"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:id="@+id/numberPeopletxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/exobold"
                                    android:text="@string/numberPeopleTurn"
                                    android:textColor="@color/colorText"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/peopleBoxtxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/exoregular"
                                    android:gravity="bottom"
                                    android:paddingTop="5dp"
                                    android:text="@string/peopleBoxTurn"
                                    android:textColor="@color/titleText"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="15dp">

                        <Button
                            android:id="@+id/turnPeopleBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorMain"
                            android:fontFamily="@font/exoregular"
                            android:paddingLeft="10dp"
                            android:paddingTop="0dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/turnBtnTextTurn"
                            android:textColor="@color/colorText"
                            android:textColorHighlight="@color/onButton"
                            android:textSize="12sp"
                            app:rippleColor="@color/onButton"
                            tools:layout_editor_absoluteX="26dp"
                            tools:layout_editor_absoluteY="182dp" />

                        <Button
                            android:id="@+id/ShareBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorMain"
                            android:fontFamily="@font/exoregular"
                            android:paddingLeft="10dp"
                            android:paddingTop="1dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="1dp"
                            android:text="@string/inviteTurn"
                            android:textColor="@color/colorText"
                            android:textColorHighlight="@color/onButton"
                            android:textSize="12sp"
                            android:visibility="visible"
                            app:rippleColor="@color/onButton"
                            tools:layout_editor_absoluteX="26dp"
                            tools:layout_editor_absoluteY="182dp" />

                        <Button
                            android:id="@+id/exitTurnBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorBlock"
                            android:backgroundTintMode="add"
                            android:fontFamily="@font/exoregular"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/exitBtnTextTurn"
                            android:textColor="@color/colorMain"
                            android:textColorHighlight="@color/onButton"
                            android:textSize="12sp"
                            app:rippleColor="@color/onButton"
                            tools:layout_editor_absoluteX="211dp"
                            tools:layout_editor_absoluteY="182dp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/colorBlock"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp">

                            <TextView
                                android:id="@+id/descriptionBoxtxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:breakStrategy="high_quality"
                                android:fontFamily="@font/exoregular"
                                android:maxWidth="300dp"
                                android:text="@string/descriptionBoxTurn"
                                android:textColor="@color/colorTextSecond"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/AboutBox" />

                            <TextView
                                android:id="@+id/CountPlacestxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exoregular"
                                android:text="@string/DurationTxt"
                                android:textColor="@color/colorMain"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/timeDuration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/DurationTimeTxt"
                                android:textColor="@color/colorMain"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/yourTurnTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/exosemibold"
                            android:gravity="center"
                            android:text="@string/yourTurntxt"
                            android:textColor="@color/colorMain"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/curBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/colorBlock"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingTop="12dp"
                                android:paddingRight="10dp">


                                <TextView
                                    android:id="@+id/posId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/exoregular"
                                    android:gravity="center_vertical"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="5dp"
                                    android:text="@string/justId"
                                    android:textColor="@color/notImportant"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="125"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/numberTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/exoregular"
                                        android:paddingStart="5dp"
                                        android:text="@string/curNameTxt"
                                        android:textAlignment="textStart"
                                        android:textColor="@color/blockColor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/positionNumberTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/exoregular"
                                        android:paddingStart="5dp"
                                        android:text="@string/positionNumber"
                                        android:textAlignment="textStart"
                                        android:textColor="@color/notImportant"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <ImageButton
                                    android:id="@+id/delBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:contentDescription="@string/ButtonExitTextMain"
                                    android:foregroundGravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:src="@drawable/cancel"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp">

                                    <TextView
                                        android:id="@+id/timeDuration2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:paddingStart="35dp"
                                        android:text="@string/numberofpeople1"
                                        android:textColor="@color/colorMain"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/timeDuration3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:paddingStart="35dp"
                                        android:text="@string/timeofpeople1"
                                        android:textColor="@color/colorMain"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <Button
                                    android:id="@+id/curJoinBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:text="@string/curjoinBtn"
                                    android:textColor="@color/colorMain"
                                    android:textSize="16sp"
                                    android:visibility="gone"
                                    app:cornerRadius="10dp" />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/TurnAll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/exosemibold"
                            android:gravity="center"
                            android:text="@string/Turntxt"
                            android:textColor="@color/colorMain"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/PositionsRec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_background"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="25dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/WarningJoinTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorMainNot"
            app:cardCornerRadius="15dp"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textWarnTurn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/warningTxtTurn"
                    android:textColor="@color/mainColorText"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/createTurnBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorMain"
            android:fontFamily="@font/exosemibold"
            android:paddingLeft="20dp"
            android:paddingTop="5sp"
            android:paddingRight="20dp"
            android:paddingBottom="5sp"
            android:text="@string/joinBtnTextTurn"
            android:textColor="@color/colorText"
            android:textColorHighlight="@color/onButton"
            android:textSize="20sp"
            app:rippleColor="@color/onButton" />

    </LinearLayout>

</RelativeLayout>