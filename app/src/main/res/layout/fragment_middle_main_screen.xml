<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FragmentMiddleMainScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp">

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_left_clicked" />

                <Button
                    android:id="@+id/bStud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:background="@android:color/transparent"
                    android:text="@string/teachTurnBtn"
                    android:textColor="@color/background"
                    android:textSize="12sp"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_right_noclicked" />

                <Button
                    android:id="@+id/bOrg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="@string/orgturnBtn"
                    android:textColor="@color/colorMain"
                    android:textSize="12sp" />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="15dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_left_clicked" />

                <Button
                    android:id="@+id/bMy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/exosemibold"
                    android:text="@string/ButtonMyTextMain"
                    android:textColor="@color/background"
                    android:textColorHighlight="@color/colorMain"
                    android:textColorHint="@color/colorMain"
                    android:textColorLink="@color/colorMain"
                    android:textSize="12sp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/view4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_right_noclicked" />

                <Button
                    android:id="@+id/MainScreenInDostupBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@null"
                    android:backgroundTintMode="add"
                    android:fontFamily="@font/exosemibold"
                    android:text="@string/ButtonInDostupTextMain"
                    android:textAllCaps="false"
                    android:textColor="@color/colorMain"
                    android:textColorHighlight="@color/colorMain"
                    android:textColorHint="@color/colorMain"
                    android:textColorLink="@color/colorMain"
                    android:textSize="12sp" />

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>




</FrameLayout>